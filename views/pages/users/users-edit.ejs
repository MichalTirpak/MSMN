<!DOCTYPE html>
<html lang="en">
  <head>
  <%- include('../../partials/head.ejs') %>
  </head>
  <body class="g-sidenav-show bg-gray-100">
      <div class="min-height-300 bg-primary position-absolute w-100"></div>
      <%- include('../../partials/sidebar.ejs') %>
        <main class="main-content position-relative border-radius-lg ">
          <%- include('../../partials/top-search.ejs') %>
          <div class="container position-sticky z-index-sticky top-0">
            <header class="mb-5 mt-9">
                <h2 class="text-white">
                  Edit User : <%= userInfo.user_name %> 
                </h2>
            </header>
              <form class="" id="update_user" method="POST">
                <div class="form-group ">
                  <label for="example-text-input" class="form-control-label">User_name</label>
                  <input type="hidden" name="id" value="<%= userInfo.id %>">
                  <input type="text" name="name" class="form-control me-2" value="<%= userInfo.user_name %>">
                  <label for="example-text-input" class="form-control-label">Admin_type</label>
                  <input type="text" name="admin_type" class="form-control me-2" value="<%= userInfo.admin_type %>">
                  <div class="d-flex justify-content-center"> 
                    <button class="btn btn-dark d-flex mt-5 mb-5" type="submit"><i class="ni ni-send me-2"></i>Send</button>
                  </div>
                </div>
              </form>
            <%- include('../../partials/footer.ejs') %>
          </div>
         </main>
      </div>
    <%- include('../../js/core-js.ejs') %>
    <script src="../../../assets/js/users.js"></script>
   </body>
</html> 