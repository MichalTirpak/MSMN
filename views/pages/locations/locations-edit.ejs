<!DOCTYPE html>
<html lang="en">
  <head>
  <%- include('../../partials/head.ejs') %>
  </head>
  <body class="g-sidenav-show bg-gray-100">
      <div class="min-height-300 bg-primary position-absolute w-100"></div>
      <%- include('../../partials/sidebar.ejs') %>
        <main class="main-content position-relative border-radius-lg ">
          <%- include('../../partials/top-search.ejs') %>
          <div class="container position-sticky z-index-sticky top-0">
            <header class="mb-5 mt-9">
                <h2 class="text-white">
                  Edit Location : <%= location.nazov %> 
                </h2>
            </header>
              <form class=" " id="update_location" method="POST">
                <div class="form-group ">
                  <label for="example-text-input" class="form-control-label">Location</label>
                  <input type="hidden" name="id" value="<%= location.id %>">
                  <input type="hidden" name="oldName" value="<%= location.nazov %>">
                  <input type="hidden" name="oldBuilding" value="<%= location.budovaid %>">
                  <input type="text" name="name" class="form-control me-2" value="<%= location.nazov %>">
                  <label for="example-text-input" class="form-control-label">Budova</label>
                    <select class="form-select" name="building">
                        <optgroup label="Select Building">
                          <option value="<%= usedBuilding.id %>" selected><%= usedBuilding.nazov %></option>
                            <option>Vyber Budovy</option>
                                <% 
                                buildings.forEach(function(building){ 
                                %>
                                <option value="<%= building.id %>"><%= building.nazov %></option>
                                <% 
                                }) 
                                %>
                        </optgroup>
                    </select>
                  <div class="d-flex justify-content-center"> 
                    <button class="btn btn-dark d-flex mt-5 mb-5" type="submit"><i class="ni ni-send me-2"></i>Send</button>
                  </div>
                </div>
              </form>
            <%- include('../../partials/footer.ejs') %>
          </div>
         </main>
      </div>
    <%- include('../../js/core-js.ejs') %>
    <script src="../../../assets/js/locations.js"></script>
   </body>
</html> 